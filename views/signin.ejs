<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('_bootstrap_meta')%>

    <title>Sign In</title>
    <style>
        /* Custom CSS for responsive design */
        .main-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .form-container {
            width: 90%;
            max-width: 400px;
            padding: 20px;
            background: white;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body style="background-color: #e6e9e9">
    <%- include('_header')%>
    <div class="main-container">
        <div class="form-container">
            <div class="text-center mb-3">
                <h4>Sign In</h4>
            </div>
            <form action="/users/create-session" method="POST">
                <!-- Email input -->
                <div class="mb-4">
                    <label class="form-label" for="email">Enter Email</label>
                    <input type="email" class="form-control" id="email" placeholder="abc@email.com" name="email" required />
                </div>
                <!-- Password input -->
                <div class="mb-4">
                    <label class="form-label" for="password">Enter Password</label>
                    <input type="password" id="password" class="form-control" name="password" required />
                </div>
                <!-- Submit button -->
                <button type="submit" class="btn btn-success btn-block mb-4">Sign in</button>
                <!-- Register buttons -->
                <div class="text-center">
                    <p>No Account? <a href="/users/signup">Register</a></p>
                </div>
            </form>
        </div>
    </div>
    <%- include('_bootstrap_script')%>
</body>
</html>
